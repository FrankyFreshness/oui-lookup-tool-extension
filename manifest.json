{
  "manifest_version": 2,
  "name": "OUI Lookup Tool",
  "version": "1.0",
  "description": "Quickly lookup MAC address vendors using OUI database",
  "author": "Francis HÃ©roux",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "oui-lookup@yourdomain.com",
      "strict_min_version": "79.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "permissions": [
    "https://api.macvendors.com/*"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  
  "icons": {
    "48": "icon.png"
  }
}
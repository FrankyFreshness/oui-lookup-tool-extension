{
  "manifest_version": 3,
  "name": "OUI Lookup Tool",
  "version": "2.0",
  "description": "Quickly lookup MAC address vendors using OUI database",
  "author": "Francis HÃ©roux",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "oui-lookup@yourdomain.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://api.macvendors.com/*",
    "https://api.maclookup.app/*",
    "https://standards-oui.ieee.org/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  
  "icons": {
    "48": "icon.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [{
    "resources": ["oui-database.json"],
    "matches": ["<all_urls>"]
  }]
}